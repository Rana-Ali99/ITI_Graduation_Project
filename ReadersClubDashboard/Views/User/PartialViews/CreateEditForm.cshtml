@model CreatedUser


<div asp-validation-summary="All" class="text-danger"></div>


<div class="mb-3">
    <label asp-for="Name" class="form-label fw-semibold"></label>
    <input asp-for="Name" class="form-control rounded-3 shadow-sm" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="UserName" class="form-label fw-semibold"></label>
    <input asp-for="UserName" class="form-control rounded-3 shadow-sm" />
    <span asp-validation-for="UserName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label fw-semibold"></label>
    <input asp-for="Email" class="form-control rounded-3 shadow-sm" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
    <input asp-for="PhoneNumber" class="form-control rounded-3 shadow-sm" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Password" class="form-label fw-semibold"></label>
    <input asp-for="Password" type="password" class="form-control rounded-3 shadow-sm" />
    <span asp-validation-for="Password" class="text-danger"></span>
</div>

<div class="mb-4">
    <label class="form-label fw-bold">الصورة (PNG فقط)</label>
    <input asp-for="formFile" class="form-control form-control-lg rounded-3" type="file" accept=".png" />
</div>

<div class="mb-3 d-none">
    <label asp-for="Image" class="form-label"></label>
    <input asp-for="Image" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
</div>

<div class="mb-4">
    <label asp-for="RoleId" class="form-label fw-semibold">الصلاحية</label>
    <select asp-for="RoleId" class="form-select form-select-lg shadow-sm rounded-3"
            asp-items="@(new SelectList(Model.Roles, "Id", "Name"))">
        <option value="0">اختر الصلاحية</option>
    </select>
    <span asp-validation-for="RoleId" class="text-danger"></span>
</div>

