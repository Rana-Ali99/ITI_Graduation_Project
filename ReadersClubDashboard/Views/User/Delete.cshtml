@model ReadersClubCore.Models.ApplicationUser

@{
    ViewData["Title"] = "حذف مستخدم";
}

<div class="container mt-3" dir="rtl">
    <form asp-action="Delete" method="post">
        <div class="card shadow-lg border-danger rounded-4">
            <div class="card-body p-5">
                <h3 class="text-center text-danger fw-bold mb-4">
                    هل أنت متأكد من حذف هذا المستخدم؟
                </h3>

                <input type="hidden" asp-for="Id" />

                <div class="row mb-4">
                    <div class="col-md-4 text-center">
                        @if (string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="~/Uploads/Users/not_found.jpg" alt="صورة المستخدم" class="img-thumbnail rounded-circle shadow" style="width: 150px; height: 150px;" />
                        }
                        else{
                  
                        <img src="~/Uploads/Users/@Model.Image" alt="صورة المستخدم" class="img-thumbnail rounded-circle shadow" style="width: 120px; height: 120px;" />
                        }
                        <p class="mt-2 text-muted">@Model.Name</p>
                    </div>
                    <div class="col-md-8 mt-5">
                    
                        <div class="mb-2"><strong>اسم المستخدم:</strong> @Model.UserName</div>
                        
                        <div class="mb-2"><strong>رقم التليفون:</strong> @Model.PhoneNumber</div>
       
                        <div class="mb-2"><strong>البريد الإلكتروني:</strong> @Model.Email</div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt"></i> تأكيد الحذف
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left"></i> إلغاء
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
