@model UserViewModel

@{
    ViewData["Title"] = "تفاصيل المستخدم";
}

<div class="container mt-3" dir="rtl">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
            <h3 class="fw-bold mb-4 text-center">تفاصيل المستخدم</h3>

            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    @if (string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/Uploads/Users/not_found.jpg" alt="صورة المستخدم" class="img-thumbnail rounded-circle shadow" style="width: 150px; height: 150px;" />
                    }
                    else
                    {
                        <img src="~/Uploads/Users/@Model.Image" alt="صورة المستخدم" class="img-thumbnail rounded-circle shadow" style="width: 150px; height: 150px;" />
                    }
                    <p class="mt-2 text-muted">@Model.Name</p>
                </div>

                <div class="col-md-8">
                    <dl class="row">
                  
                        <dt class="col-sm-4 fw-bold text-secondary">اسم المستخدم</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>
                        <dt class="col-sm-4 fw-bold text-secondary">رقم الهاتف</dt>
                        @if(string.IsNullOrEmpty(Model.PhoneNumber)){
                            <dd class="col-sm-8">لا يوجد رقم تليفون</dd>
                        }
                        else
                        {
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>
                        }
                        <dt class="col-sm-4 fw-bold text-secondary">البريد الإلكتروني</dt>
                        @if(string.IsNullOrEmpty(Model.Email)){
                            <dd class="col-sm-8">لا يوجد بريد إلكتروني</dd>
                        }
                        else
                        {
                        <dd class="col-sm-8">@Model.Email</dd>
                        }
                        <dt class="col-sm-4 fw-bold text-secondary">الصلاحيات</dt>
                        <dd class="col-sm-8 badge bg-info text-dark fs-6">
                            @string.Join(" | ", Model.Roles.ToList())
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary px-4">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left"></i> العودة إلى القائمة
                </a>
            </div>

        </div>
    </div>
</div>
