@model ReadersClubCore.Models.Category

@{
    ViewData["Title"] = "إضافة تصنيف جديد";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="container mt-1" dir="rtl">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <partial name="PartialView/CreateEditForm.cshtml"/>

    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-user-plus"></i> إضافة
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="fas fa-arrow-left"></i> العودة
        </a>
    </div>
</form>
</div>
</div>
</div>