@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<ReadersClubCore.Models.Story>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Readers Club Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@700&display=swap" rel="stylesheet">
    <style>

    </style>
</head>
<body>

    <h2 class="mb-4">All Stories</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var story in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(story.Cover))
                    {
                        <img src="@story.Cover" class="card-img-top" alt="@story.Title" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@story.Title</h5>
                        <p class="card-text">
                            @story.Summary?.Substring(0, Math.Min(story.Summary.Length, 100))...
                        </p>
                        <p class="text-muted"><strong>Category:</strong> @story.Category?.Name</p>
                        <p>
                            <span class="badge bg-info text-dark">Views: @story.ViewsCount</span>
                            <span class="badge bg-success">Likes: @story.LikesCount</span>
                            <span class="badge bg-danger">Dislikes: @story.DislikesCount</span>
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="#" class="btn btn-primary btn-sm w-100">View Details</a>
                        <a href="/Story/UpdateStory/@story.Id">Edit</a> |
                        <a href="/Story/Delete/@story.Id">Delete</a>

                    </div>
                </div>
            </div>
        }
    </div>


</body>
</html>

